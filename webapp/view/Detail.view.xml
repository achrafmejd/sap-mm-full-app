    <semantic:SemanticPage
        id="detailPage"
        busy="{detailView>/busy}"
        busyIndicatorDelay="{detailView>/delay}">
        <semantic:titleHeading>
            <Title id="_IDGenTitle1"
                text="{Designation}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
            <layout:HorizontalLayout id="_IDGenHorizontalLayout1" allowWrapping="true">
				<layout:VerticalLayout id="_IDGenVerticalLayout2">
                    <Image id="_IDGenImage1" src="{= '../images/' + ${ImageArticle} }" width="100px"/>
                </layout:VerticalLayout>
                <layout:VerticalLayout id="_IDGenVerticalLayout3" class="sapUiLargeMarginBegin">

                    <ObjectAttribute id="_IDGenObjectAttribute2" title="{i18n>Code de l'article}"/>
                    <ObjectIdentifier id="_IDGenObjectIdentifier1" class="objectIdentifier" title="{CodeArticle}" />

                    <ObjectAttribute id="_IDGenObjectAttribute3" class="objectAttributeTitle" title="{i18n>Crée Par}"/>
                    <ObjectIdentifier id="_IDGenObjectIdentifier2" class="objectIdentifier" title="{CreePar}" />

                    <ObjectAttribute id="_IDGenObjectAttribute4" class="objectAttributeTitle" title="{i18n>Date de Création}"/>
                    <ObjectIdentifier id="_IDGenObjectIdentifier3" class="objectIdentifier" title="{DateCreation}" />

                    <ObjectAttribute id="_IDGenObjectAttribute5" class="objectAttributeTitle"  title="{i18n>Prix Unitaire}"/>
                    <ObjectIdentifier id="_IDGenObjectIdentifier4" class="objectIdentifier" title="{PrixStandard} {Devise}" />

                </layout:VerticalLayout>
                <layout:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiLargeMarginBegin">
					<ObjectAttribute id="_IDGenObjectAttribute6" title="Availability"/>
		    		<ObjectStatus id="_IDGenObjectStatus1" class="objectStatus" text="In Stock" icon="sap-icon://sys-enter-2"
		        	state="Success"/>  
				</layout:VerticalLayout>      
            </layout:HorizontalLayout> 
        </semantic:headerContent>
            
        <semantic:content>
            <layout:HorizontalLayout id="_IDGenHorizontalLayout11" allowWrapping="true">
            <!-- <Text id="_IDGenText10" text="Hello"></Text> -->

                <layout:VerticalLayout id="_IDGenVerticalLayout22" class="sapUiSmallMarginTop">
                        <Title id="_IDGenTitle2" text="FOURNISSEURS DE L'ARTICLE" level="H1"  />
                    	<MessageStrip 
                            id="_IDGenMessageStrip1"
                            showIcon="true"
                            class="messageStrip"
                            text="Note: La section ci-dessous présente une liste complète des fournisseurs proposant cet article ainsi que leurs prix de vente respectifs." 
                        />
                        <Table
                            id="idProductsTable"
                            inset="false"
                            class="sapFSemanticPageAlignContent"
                            width="auto"
                            items="{/}"
                            >
                            <columns>
                                <Column id="_IDGenColumn1">
                                    <Text id="_IDGenText1" text="Fournisseur"/>
                                </Column>
                                <Column id="_IDGenColumn11">
                                    <Text id="_IDGenText5" text="Prix de Vente"/>
                                </Column>
                                <Column id="_IDGenColumn12">
                                    <Text id="_IDGenText6" text="Devise"/>
                                </Column>
                                <Column id="_IDGenColumn13">
                                    <Text id="_IDGenText7" text="Quantié Disponible"/>
                                </Column>
                                <Column id="_IDGenColumn14">
                                    <Text id="_IDGenText8" text="Unité"/>
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle">
                                    <cells> 
                                        <Text id="_IDGenText4" text="{Fournisseur}"/>
                                        <Text id="_IDGenText9" text="{PrixAchat}"/>
                                        <Text id="_IDGenText11" text="{Devise}"/>
                                        <Text id="_IDGenText12" text="{Quantite}"/>
                                        <Text id="_IDGenText13" text="{Unite}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                </layout:VerticalLayout>
            </layout:HorizontalLayout>
                	
        </semantic:content>
    
        <semantic:closeAction>
            <semantic:CloseAction
                    id="closeColumn"
                    press=".onCloseDetailPress"/>
        </semantic:closeAction>

