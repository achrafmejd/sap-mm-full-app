   <Page id="page" title="Commande d'Achat" showNavButton="true" navButtonPress=".onNavBackToDAHome">
        <content>
			<!-- Header of the page - Title info - Start -->
            <ff:DynamicPageTitle id="_IDGenDynamicPageTitle1">
					<ff:heading>
						<Title id="_IDGenTitle1" text="Commande - #{NumCa}"/>
					</ff:heading>
					<ff:expandedContent>
						<Label id="_IDGenLabel1" text="Provenant de la Demande #{DemandeAchat}"/>
					</ff:expandedContent>
                    <ff:content>
						<OverflowToolbar id="_IDGenOverflowToolbar1">
							<GenericTag id="_IDGenGenericTag1" text="{= ${Supprimé} === 'X' ? 'Rejetée' : ${Statut} === 'X' ? 'Validée' : 'En cours'}"
								status="{= ${Supprimé} === 'X' ? 'Error' : ${Statut} === 'X' ? 'Success' : 'Information'}"
								design="StatusIconHidden">
								
							</GenericTag>
						</OverflowToolbar>
					</ff:content>
            </ff:DynamicPageTitle>
			<ff:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
				<layout:HorizontalLayout id="_IDGenHorizontalLayout1" allowWrapping="true">

					<layout:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute1" title="Utilisateur"/>
                        <ObjectStatus id="_IDGenObjectStatus1001" text="{Utulisateur}" icon="sap-icon://account"  state="Information" />
					</layout:VerticalLayout>

                    <layout:VerticalLayout id="_IDGenVerticalLayout221" class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute421" title="Fournisseur"/>
						<ObjectStatus id="_IDGenObjectStatus100" text="{Fournisseur}" icon="sap-icon://shipping-status" state="Information" />
					</layout:VerticalLayout>

					<layout:VerticalLayout id="_IDGenVerticalLayout2"  class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute4" title="Date de Création"/>
						<ObjectStatus id="_IDGenObjectStatus101" text="{path: 'Datecreation', formatter: '.formatDate'}" icon="sap-icon://select-appointments" state="Information" />
					</layout:VerticalLayout>

                    <layout:VerticalLayout id="_IDGenVerticalLayout22" class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute5" title="Date de Livraison Souhaité"/>
						<ObjectStatus id="_IDGenObjectStatus2" text="{path: 'DatelivraisonSouh', formatter: '.formatDate'}" icon="sap-icon://select-appointments"  state="Success" />
					</layout:VerticalLayout>

                    <layout:VerticalLayout id="_IDGenVerticalLayout3" class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute7" title="Commentaire"/>
						<ObjectStatus id="_IDGenObjectStatus3" icon="sap-icon://comment" text="{Commantaire}" state="Success" />
					</layout:VerticalLayout>

				</layout:HorizontalLayout>
			</ff:DynamicPageHeader>
