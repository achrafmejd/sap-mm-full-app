<mvc:View xmlns:f="sap.f"
    controllerName="commandearticle.controller.Home"
    xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"  xmlns:microchart="sap.suite.ui.microchart"
        >

    <Page id="_HomePage">
    	<l:VerticalLayout id="_IDV1" width='100%'>
		<Title id="_IDGenTitle1"
				titleStyle="H5"
				text="Navigation Rapide"
				class="sapUiTinyMarginBegin"/>  
		<l:HorizontalLayout id="_IDGenVerticalLayout1">
                <GenericTile id="_IDGenGenericTile22" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Commandes"
                    subheader="Consultez vos commandes d'achat" press="onNavigateToCAPage">
                    <TileContent id="_IDGenTileContent22" unit="" footer="">
                        <ImageContent id="_IDGenImageContent2" src="sap-icon://sales-order"  />
                    </TileContent>
                </GenericTile> 

                <!-- DA Tile - START -->
                <GenericTile id="_IDGenGenericTileDA" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Demande d'Achat" subheader="Consultez vos demandes d'achat" press="onNavigateToDAPage" >
					<TileContent id="_IDGenTileContent8" >
						<content>
							<microchart:ComparisonMicroChart id="_IDGenComparisonMicroChart2" scale="" size="Responsive" >
								<microchart:data>
									<microchart:ComparisonMicroChartData id="_IDGenComparisonMicroChartData_Accepted" title="Validée" value="0" color="Good" />
									<microchart:ComparisonMicroChartData id="_IDGenComparisonMicroChartData5_Not_Accepted" title="En cours" value="0" color="" />
								</microchart:data>
							</microchart:ComparisonMicroChart>
						</content>
					</TileContent>
				</GenericTile>
                <!-- DA Tile - END -->
		</l:HorizontalLayout>
	</l:VerticalLayout>

	<l:VerticalLayout id="_IDV2" width='100%'>
		<Title id="_IDGenTitle2"
				titleStyle="H5"
				text="Consultation Rapide"
				class="sapUiTinyMarginBegin"/>  
		<l:HorizontalLayout id="_IDGenVerticalLayout2">
			<SlideTile id="_IDGenSlideTile1" class="sapUiTinyMarginBegin sapUiTinyMarginTop">
				<GenericTile id="_IDGenGenericTile1"
					backgroundImage="../images/fournisseur.jpg"
					frameType="TwoByOne" press="onNavigateToVendors">
					<TileContent id="_IDGenTileContent1" footer="INWI Maroc">
						<NewsContent id="_IDGenNewsContent1"
							contentText="Liste des Fournisseurs !"
							subheader="Consulter La Liste de vos fournisseurs avec plusieurs détails" />
					</TileContent>
				</GenericTile>
			</SlideTile>

			<SlideTile id="_IDGenSlideTile2" class="sapUiTinyMarginBegin sapUiTinyMarginTop">
				<GenericTile id="_IDGenGenericTile2"
					backgroundImage="../images/articles.jpg"
					frameType="TwoByOne" press="onNavigateToArticles">
					<TileContent id="_IDGenTileContent2" footer="INWI Maroc">
						<NewsContent id="_IDGenNewsContent2"
							contentText="Ayez une idée sur Articles !"
							subheader="Consulter La Liste et passez votre demande." />
					</TileContent>
				</GenericTile>
			</SlideTile>
		</l:HorizontalLayout>
	</l:VerticalLayout>
    </Page>

</mvc:View>