controllerName="commandearticle.controller.DASingle" displayBlock="true">
   <Page id="page" title="Demande d'achat" showNavButton="true" navButtonPress=".onNavBackToDAHome">
        <!-- Flex box Start - Top of the page buttons -->
		<FlexBox id="_IDGenFlexBox1" class="panel-button-container" justifyContent="End">
            <Button id="_ButtonConvertDA" type="Default" icon="sap-icon://open-command-field" text="Procéder à la Commande" visible="{= ${Status} === 'X'}" press="onConvertDAtoCA"/>
        </FlexBox>
		<!-- Flex box End - Top of the page buttons -->
        <content>
			<!-- Header of the page - Title info - Start -->
            <ff:DynamicPageTitle id="_IDGenDynamicPageTitle1">
					<ff:heading>
						<Title id="_IDGenTitle1" text="Demande - #{DemandeAchat}"/>
					</ff:heading>
                    <ff:content>
						<OverflowToolbar id="_IDGenOverflowToolbar1">
							<GenericTag id="_IDGenGenericTag1" text="{= ${Supprimé} === 'X' ? 'Rejetée' : ${Status} === 'X' ? 'Validée' : 'En cours'}"
								status="{= ${Supprimé} === 'X' ? 'Error' : ${Status} === 'X' ? 'Success' : 'Information'}"
								design="StatusIconHidden">
								
							</GenericTag>
						</OverflowToolbar>
					</ff:content>
            </ff:DynamicPageTitle>
            <ff:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
				<layout:HorizontalLayout id="_IDGenHorizontalLayout1" allowWrapping="true">

					<layout:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute1" title="Utilisateur"/>
                        <ObjectStatus id="_IDGenObjectStatus1001" text="{Utilisateur}" icon="sap-icon://account"  state="Information" />
					</layout:VerticalLayout>

					<layout:VerticalLayout id="_IDGenVerticalLayout2"  class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute4" title="Date de Création"/>
						<ObjectStatus id="_IDGenObjectStatus101" text="{path: 'DateCreation', formatter: '.formatDate'}" icon="sap-icon://select-appointments" state="Information" />
					</layout:VerticalLayout>

                    <layout:VerticalLayout id="_IDGenVerticalLayout3" class="sapUiMediumMarginEnd">
						<ObjectAttribute id="_IDGenObjectAttribute7" title="Commentaire"/>
						<ObjectStatus id="_IDGenObjectStatus3" icon="sap-icon://comment" text="{Commentaire}" state="Success" />
					</layout:VerticalLayout>

				</layout:HorizontalLayout>
			</ff:DynamicPageHeader>
