			<!-- Header of the page - Title info - End -->

            <!-- Tabs for DA Items - Start -->
            <IconTabBar id="_IDGenIconTabBar1" expanded="{device>/isNoPhone}" class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter id="_IDGenIconTabFilter2" key="attachments" text="Postes">
                        <Table id="_IDGenTable1" items="{/}">
                            <columns>
                                <Column id="_IDGenColumn01" width="">
                                    <Text id="_IDGenText01" text="Article" />
                                </Column>
                                <Column id="_IDGenColumn1" width="">
                                    <Text id="_IDGenText1" text="Poste" />
                                </Column>
                                <Column id="_IDGenColumn2" width="">
                                    <Text id="_IDGenText2" text="Code Article" />
                                </Column>
                                <Column id="_IDGenColumn3" width="">
                                    <Text id="_IDGenText3" text="Desgination" />
                                </Column>
                                <Column id="_IDGenColumn4" width="">
                                    <Text id="_IDGenText4" text="Qte" />
                                </Column>
                                <Column id="_IDGenColumn5" width="">
                                    <Text id="_IDGenText5" text="PU" />
                                </Column>
                            </columns>
                             <ColumnListItem id="_IDGenColumnListItem1">
                                    <cells> 
                                        <Image id="_IDGenImage101" src="{= '../images/' + ${CodeArticle} + '.png' }" width="50%" />
                                        <!-- <Image id="_IDGenImage101" src="../media/HT-1000.jpg" width="50%" /> -->
                                    </cells>
                                    <cells>
                                        <Text id="_IDGenText6" class="_IDGenText1322_id000000" text="{PosteDemande}" />
                                    </cells>
                                    <cells>
                                        <Text id="_IDGenText7" class="_IDGenTex22t13_id000000" text="{CodeArtcile}" />
                                    </cells>
                                    <cells>
                                        <Text id="_IDGenText8" class="_IDGenText1322_id000000" text="{Commentaire}" />
                                    </cells>
                                    <cells>
                                        <Text id="_IDGenText9" class="_IDGenTex22t13_id000000" text="{Quantite}" />
                                    </cells>
                                    <cells>
                                        <Text id="_IDGenText10" class="_IDGenTex22t13_id000000" text="{Prix} {Devise}" />
                                    </cells>
                            </ColumnListItem>
                        </Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
            <!-- Tabs for DA Items - End -->
          

        </content>
        <!-- Busy Dialog - Start -->
        <BusyDialog id="BusyDialog" />
        <!-- Busy Dialog - End -->
